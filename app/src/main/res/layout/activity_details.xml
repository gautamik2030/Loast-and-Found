<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="#ffff"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".DetailsActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="91dp"
        android:layout_height="97dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="121dp"
        android:layout_weight="10"
        android:text="Find your lost item"
        android:textSize="36sp"
        android:fontFamily="@font/amaranth_italic"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        >
        <TextView
            android:id="@+id/objname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="This is the object name"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/locname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text=" This is the Location"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/dateV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text=" This is the Date"
            android:textSize="25sp" />



        <TextView
            android:id="@+id/quest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="This is the question"
            android:textSize="25sp" />



    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        >
        <TextView
            android:id="@+id/nameV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="This is the name of the founder"
            android:textSize="25sp" />



        <TextView
            android:id="@+id/contactV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="This is the contact info of the founder"
            android:textSize="25sp" />

    </LinearLayout>









</LinearLayout>